<article class="container catalogue">
  {% set postslist = collections.posts %} {% for post in postslist | reverse %}
  <a class="catalogue-item" href="{{ post.url | url }}">
    <time
      datetime="{{ post.date | dateToFormat('yyyy-MM-dd') }}"
      class="catalogue-time"
      >{{ post.date| dateToFormat('MMMM dd, yyyy') }}</time
    >
    <h2 class="catalogue-title">{{ post.data.title }}</h2>
    <div class="catalogue-line"></div>
    <p>
      {% if post.data.description %} {{ post.data.description }} {% endif %}
    </p>
  </a>
  {% endfor %}
</article>
