layout: base
---

<style>
  .catalogue {
    display: block;
    padding: 0.5rem 0;

    a {
      color: black;
    }
  }

  .catalogue-title {
    margin-top: 0.5rem;
    margin-bottom: 0.2rem;
    /* margin: 0.5rem 0; */
  }

  .catalogue-time {
    letter-spacing: 0.5px;
  }

  .catalogue-line {
    border-top: 0.3rem solid var(--secondaryColor);
    transition: all 300ms ease-out;
    width: 4rem;
    padding: 0.5rem 0;
    margin: 0;
  }

  .catalogue-item {
    display: block;
    text-decoration: none;
    border-bottom: 0.1rem solid var(--color-dark-alpha);
    padding: 1rem 0;

    &:hover .catalogue-line,
    &:focus .catalogue-line {
      width: 8rem;
    }
    &:last-child {
      border: 0;
    }
  }
</style>

